<div class="my-page">
  <div class="my-page-form">
  <h3 class="mt-2 ml-2">マイページ</h3>
  <%= form_for(current_user) do |f| %>
    <div class="col ml-1">
          <label for="exampleInput" class="form-label ml-２ mt-2">ニックネーム</label>
          <%= f.text_field :nickname, class:"form-control" %>
    </div>
        
    <div class="col-12">
      <label for="inputEmail4" class="form-label mt-2">メールアドレス</label>
      <%= f.email_field :email, class:"form-control", id:"inputEmail4" %>
    </div>

    <div class="mx-3 mt-3">
      <%= f.submit "更新する", class:"btn btn-outline-dark"%>
      <%= link_to "戻る", root_path, class:"btn btn-outline-dark ml-3" %>
    </div>
  <% end %>
  </div>
</div>

