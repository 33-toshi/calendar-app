<div class="plan-page">
<%= form_with(model: @plan, local: true) do |form| %>


  <div class="plan-form mb-3">
    <label for="disabledTextInput" class="form-label">タイトル</label>
    <%= form.text_field :title, class:"form-control" %>
  
    <label for="disabledTextInput" class="form-label">タスク</label>
    <%= form.text_field :task, class:"form-control" %>
  
    <label for="disabledTextInput" class="form-label">メモ</label>
    <%= form.text_area :memo, class:"form-control" %>
  </div>

  <div class="start">
    <%= form.date_select :start_time %>
  </div>

  <div class="submit mt-3">
    <%= form.submit "更新", class:"submit btn btn-primary mr-2"%>
    <%= link_to "削除",  plan_path(@plan.id), class:"btn btn-outline-secondary mr-2", method: :delete %>
    <%= link_to "戻る" ,root_path, class:"btn btn-outline-success"%>
  </div>
<% end %>
</div>


